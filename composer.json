{
  "name": "wdmg/yii2-comments",
  "description": "Tree comments system",
  "keywords": ["yii2", "yii2-comments", "comments system", "wdmg"],
  "type": "yii2-extension",
  "license": "MIT",
  "version": "1.0.1",
  "homepage": "https://github.com/wdmg/yii2-comments",
  "support": {
    "source": "https://github.com/wdmg/yii2-comments",
    "issues": "https://github.com/wdmg/yii2-comments/issues"
  },
  "authors": [
    {
      "name": "Alexsander Vyshnyvetskyy",
      "email": "alex.vyshnyvetskyy@gmail.com"
    },
    {
      "name": "W.D.M.Group, Ukraine",
      "email": "wdmg.com.ua@gmail.com"
    }
  ],
  "require": {
    "yiisoft/yii2": "^2.0.35",
    "wdmg/yii2-base": "^1.2.3",
    "wdmg/yii2-selectinput": "^1.0.9",
    "wdmg/yii2-helpers": "^1.3.3"
  },
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "wdmg\\comments\\": ""
    }
  },
  "extra": {
    "options": {
      "routePrefix": "admin",
      "defaultController": "admin/comments/default",
      "baseRoute": "/comments",
      "defaultListView": "@vendor/wdmg/yii2-comments/widgets/views/_list",
      "defaultFormView": "@vendor/wdmg/yii2-comments/widgets/views/_form",
      "editCommentTimeout": 300,
      "deleteCommentTimeout": 3600,
      "newCommentsModeration": true,
      "approveFromRegistered": true
    }
  }
}